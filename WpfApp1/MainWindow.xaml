<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Авторизация" Height="400" Width="600"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Grid Background="#00aeef">
        <Border  Width="300" Height="300" CornerRadius="20" Background="White">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="White" Width="200">
                <Image Source="TrsP.png"/>
                <TextBox x:Name="LoginTxt" materialDesign:HintAssist.Hint="Введите логин" Style="{StaticResource MaterialDesignOutlinedTextBox}"  Margin="0 15 0 0 "/>
                <PasswordBox x:Name="PassTxt" materialDesign:HintAssist.Hint ="Пароль" Style="{StaticResource MaterialDesignOutlinedPasswordBox}" Margin="0 15"/>
                <Button x:Name="SignInBtn" Content="Войти" Background="#00aeef" Click="SignInBtn_Click"/>
            </StackPanel>
        </Border>
    </Grid>

</Window>

    
    